<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                tools:context="com.example.android.bluetoothlegatt.DeviceControlActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/logo2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:id="@+id/tempLayout"
            android:background="@drawable/rounded"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="22sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/data_value"
                android:layout_height="match_parent"
                android:textSize="50sp"
                android:gravity="center"
                android:text="27Â°C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:id="@+id/heartBeatLayout"
            android:background="@drawable/rounded"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tempLayout"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Beat"
                android:textSize="22sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/data_value2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="50sp"
                android:gravity="center"
                android:text="85bpm"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRAPH"
            android:id="@+id/viewGraph"/>
    </RelativeLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>
